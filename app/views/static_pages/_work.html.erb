<script type="text/javascript">
  $(document).ready(function(){
    $('.work-carousel').slick();

    function playCurrentvideo () {
      $('video').each(function(idx, vid) {
        vid.pause()
      });
      video = $('.slick-current').find('video').get(0);
      video.play();
    }

    function addInfoListener () {
      info = $('.slick-current').find('.more-info');
      // remove all events from more-info to prevent multiple calls
      $('.more-info').off('click');
      info.on('click', function (e) {
        $(this).next().toggleClass('make-opaque');
        $(this).find('i').toggleClass('hide-button');
      });
    }

    playCurrentvideo();
    addInfoListener();

    $('.work-carousel').on('afterChange', function (e) {
      playCurrentvideo();
      addInfoListener();
    });

  });
</script>
